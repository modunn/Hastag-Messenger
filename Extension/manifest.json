{
  "manifest_version": 2,
  "name": "Tee Note",
  "description":"Chrome Extension Add Note to Messenger",
  "version": "1.0",
  "icons": {                   
    "19": "image/icon.png",
    "38": "image/icon.png",
    "48": "image/icon.png",
    "128": "image/icon.png"  
  },
  "browser_action": {
    "default_icon": "image/icon.png"
  },
  "content_scripts": [{
    "matches": ["*://*.messenger.com/*"],  
    "css":["css/style.css"],
    "js": ["js/client.js","js/realtime.js"],
    "run_at": "document_end",
    "all_frames": true
  }],
  "background": {
    "persistent": false,
    "scripts": [
      "js/socketio.js",
      "js/server.js",
      "js/background.js"
     
    ]
  },
  "permissions": [
    "activeTab",
    "tabs", 
    "contextMenus",
    "*://*.messenger.com/*",
    "https://teenote.herokuapp.com/*",
    "http://teenote.herokuapp.com/*"

  ]
}
