{
  "manifest_version": 2,
  "name": "Hastag Messenger",
  "description": "Chrome Extension Add Button Demo",
  "version": "1.0",
  "icons": {                   
    "19": "icon.png",
    "38": "icon.png",
    "48": "icon.png",
    "128": "icon.png"  
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*.messenger.com/*"],
    "js": ["content.js"],
    "run_at": "document_end",
    "all_frames": true
  }],

  "permissions": [
    "activeTab",
    "tabs", 
    "*://*.messenger.com/*"
  ]
}